<div class="container mt-5">
    <h1 class="mb-4 text-center">Your Cart</h1>
    <div class="d-flex">
        <a href="/main" class="btn px-5 btn-warning mb-3 mx-2">Back</a>
    </div>
    <div class="d-flex">
        <div>
            {{#if hasItems}}
            <ul class="list-group shadow mb-3" style="width: 800px">
                {{#each cart}}
                <li class="list-group-item">
                    <h5 class="mb-4 text-center">{{this.name}}</h5>
                    <p><strong>Price:</strong> <span class="float-end">${{this.price}}</span></p>
                    <p><strong>Commerce:</strong> <span class="float-end">{{this.commerceName}}</span></p>
                    <form action="/cart/remove" method="POST" class="float-end mt-5">
                        <input type="hidden" name="productId" value="{{this.id}}">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </li>
                {{/each}}
            </ul>
        </div>

        <div>
            <div class="card shadow mx-3" style="width: 400px">
                <div class="card-body">
                    <h5 class="card-title text-center mb-5">Order Resume</h5>
                    <p class="card-text"><strong>Subtotal:</strong> <span class="float-end">${{subtotal}}</span></p>
                    <p class="card-text"><strong>ITBIS (18%):</strong> <span class="float-end">${{itbis}}</span></p>
                    <h5 class="card-text">Total: <span class="float-end">${{total}}</span></h5>
                    <form action="/assign-order" method="POST" class="mt-5">
                        <input type="hidden" name="userId" value="{{user.id}}" />
                        <button type="submit" class="btn btn-success float-end">Complete Order</button>
                    </form>
                </div>
            </div>
        </div>



        {{else}}
        <div class="card">
            <div class="card-body shadow">
                <p class="card-text"><em>Your cart is empty.</em></p>
            </div>
        </div>
        {{/if}}
    </div>
</div>