<div class="container mt-5">
    <h1 class="d-flex justify-content-center">Add Product</h1>
    <form action="/commerce/products/add" method="POST" class="border shadow-sm p-4 rounded-3 mx-auto"
        style="max-width: 600px;">
        <div class="form-group mb-3">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group mb-3">
            <label for="price">Price:</label>
            <input type="number" class="form-control" id="price" name="price" required>
        </div>
        <div class="form-group mb-3">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" required></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="commerceId">Commerce:</label>
            <select class="form-control" id="commerceId" name="commerceId" required>
                {{#each commerces}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="categoryId">Category:</label>
            <select class="form-control" id="categoryId" name="categoryId" required>
                {{#each categories}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="d-flex justify-content-between">
            <a href="/commerce/inventory" class="btn btn-warning">Back</a>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>