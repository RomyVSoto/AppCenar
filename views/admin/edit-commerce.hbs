<div class="container mt-5">
    <h1 class="text-center">Commerce Edit</h1>

    <form action="/admin/edit-commerce" method="POST" enctype="multipart/form-data"
        class="border shadow-sm p-4 rounded-3">
        <input type="hidden" name="commerceId" value="{{commerce.id}}">

        <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{commerce.name}}">
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Phone:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{commerce.phone}}">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
        </div>

        <div class="mb-3">
            <label for="openingHour" class="form-label">Opening Hour:</label>
            <input type="text" class="form-control" id="openingHour" name="openingHour"
                value="{{commerce.openingHour}}">
        </div>
        <div class="mb-3">
            <label for="closingHour" class="form-label">Closing Hour:</label>
            <input type="text" class="form-control" id="closingHour" name="closingHour"
                value="{{commerce.closingHour}}">
        </div>


        <div class="mb-3">
            <label for="picture" class="form-label">Picture:</label>
            <input type="file" class="form-control" id="picture" name="picture">
        </div>

        <div class="d-flex justify-content-between">
            <a href="/admin" class="btn btn-warning">Back</a>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>