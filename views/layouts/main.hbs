<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
    <title>{{pageTitle}}</title>
</head>

<body>
    <header>
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid d-flex justify-content-center align-items-center position-relative">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" href="/main">
                        <img src="/assets/img/logo.jpg" width="35" height="35" alt="Logo" class="rounded-2">
                    </a>
                    <a class="navbar-brand mx-2" href="/main">AppCenar</a>
                </div>
                <button class="navbar-toggler position-absolute end-0 mx-3" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbar-toggle" aria-controls="navbar-toggle" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {{#if (eq userRole "client")}}
                <a class="navbar-brand btn btn-sm btn-transparent" href="/cart"><img src="/assets/img/cart.png"
                        width="30" height="30"></a>
                {{/if}}
            </div>


            <div class="collapse navbar-collapse position-absolute top-100 end-0 mx-2" id="navbar-toggle">
                <div class="navbar-nav bg-light px-5 py-3 rounded-3 border border-secondary-subtle">
                    {{#if isAuthenticated}}
                    <div class="text-center">
                        <img src="{{user.picture}}" id="picture" width="75" height="75" class="rounded-5 mb-3">
                        <div><strong><em>{{user.username}}</em></strong></div>
                        <div><em>{{user.firstName}} {{user.lastName}}</em></div>
                        <div><em>{{user.email}}</em></div>
                        <div><em>{{user.role}}</em></div>
                        <div class="mt-2">
                            {{#if (eq userRole "commerce")}}
                            <a href="/commerce/inventory" class="btn btn-dark btn-sm mb-2 px-4">Inventory</a>
                            {{/if}}
                        </div>
                        <div class="mb-1">
                            {{#if (eq userRole "client")}}
                            <a href="#" class="btn btn-dark btn-sm mb-1 px-4">Orders</a>
                            {{else if (eq userRole "commerce")}}
                            <a href="#" class="btn btn-dark btn-sm mb-1 px-4">Orders</a>
                            {{else if (eq userRole "delivery")}}
                            <a href="#" class="btn btn-dark btn-sm mb-1 px-4">Orders</a>
                            {{/if}}
                        </div>
                        <div class="mb-2">
                            {{#if (eq userRole "client")}}
                            <a href="/addresses" class="btn btn-dark btn-sm mb-2 px-4">Addresses</a>
                            {{/if}}
                        </div>
                    </div>
                    <div class="mt-5 d-flex flex-column align-items-center">
                        {{#if (eq userRole "admin")}}
                        <a href="/admin" class="btn btn-dark btn-sm mb-2 px-4">Admin</a>
                        {{else if (eq userRole "commerce")}}
                        <a href="/profile" class="btn btn-dark btn-sm mb-2 px-4">Profile</a>
                        {{else}}
                        <a href="/profile" class="btn btn-dark btn-sm mb-2 px-4">Profile</a>
                        {{/if}}
                        <form action="/logout" method="POST">
                            <button class="btn btn-dark btn-sm px-4" type="submit">Log out</button>
                        </form>
                    </div>
                </div>

                {{/if}}
            </div>
        </nav>
    </header>

    <main>
        {{#if hasErrorMessages}}
        <div class="alert alert-danger">
            {{#each errorMessages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        {{#if hasSuccessMessages}}
        <div class="alert alert-success">
            {{#each successMessages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        {{#if hasInfoMessages}}
        <div class="alert alert-info">
            {{#each infoMessages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        {{#if hasWarningMessages}}
        <div class="alert alert-warning">
            {{#each warningMessages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        {{{body}}}
    </main>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top">
            <div class="col-md-4 d-flex align-items-center w-100">
                <span class="mb-3 mb-md-0 text-body-secondary mx-3">© 2024 AppCenar, Inc</span>
                <span class="mb-3 mb-md-0 text-body-secondary ms-auto mx-3">Romy Valdez 2023-0618 <br> Javier García 2023-0671</span>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>